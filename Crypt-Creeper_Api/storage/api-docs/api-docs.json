        "/api/user/create": {
            "put": {
                "tags": [
                    "user"
                ],
                "summary": "Creates a new user.",
                "description": "Create the specified resource.\nCreates a new user.",
                "operationId": "58a1e7e5ea2085144e7709685a657ed4",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Name of the user.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "Name for the new user",
                                "value": "abbytorade"
                            }
                        }
                    },
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Email of the user.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "The email for the new user",
                                "value": "abbytorade@icloud.com"
                            }
                        }
                    },
                    {
                        "name": "password",
                        "in": "path",
                        "description": "Password for the new user",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "The password for the user",
                                "value": "Ud345678"
                            }
                        }
                    },
                    {
                        "name": "faction_id",
                        "in": "path",
                        "description": "ID of the faction to join.",
                        "required": true,
                        "schema": {
                            "type": "int"
                        },
                        "examples": {
                            "int": {
                                "summary": "The id for the faction to join",
                                "value": "6"
                            }
                        }
                    },
                    {
                        "name": "profile_pic",
                        "in": "path",
                        "description": "Profile picture for the new user",
                        "required": true,
                        "schema": {
                            "type": "int"
                        },
                        "examples": {
                            "string": {
                                "summary": "The picture in base64",
                                "value": "(base64 picture)"
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User was created."
                    },
                    "422": {
                        "description": "Info entered was invalid."
                    },
                    "default": {
                        "description": "An error occurred."
                    }
                }
            }
        },
